<h1>Your orders</h1>
<br>
<div class="container">
  <div class="row">
    {{#each purchases}}
    <div class="col-3">
      <img src="{{user.product.[0].image}}" alt="{{user.product.[0].title}}">
      <div>
        <p>order# {{id}}</p>
        <br>
        <p>{{date}}</p>
        <br>
        <div id="address">
          <p>{{shippingAddress.name}}</p>
          <p>{{shippingAddress.street}}</p>
          <p>{{shippingAddress.city}}</p>
          <p>{{shippingAddress.country}}</p>
          </div>
        <br>
        <p class="ml-auto">${{price}}</p>
      </div>
    </div>
  {{/each}}
  </div>
</div>
